<?xml version="1.0" encoding="utf-8" ?>
<StackLayout xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhoneticDictionaryMauiApp.Views.AdditionalInfoView">
    <Label x:Name="InfoHeader" Text="" HorizontalTextAlignment="Start" FontSize="20" FontAttributes="Bold" Padding="16" />
    <StackLayout x:Name="InfoList">
        <BindableLayout.ItemTemplate>
            <DataTemplate>
                <VerticalStackLayout>
                    <Label Text="{Binding Word}" Padding="8,0,0,0" FontAttributes="Bold" />
                    <HorizontalStackLayout>
                        <Label Text="Pronunciation: " Padding="16,0,0,0" />
                        <Label Text="{Binding Pronunciation}" LineBreakMode="WordWrap" />
                    </HorizontalStackLayout>
                    <HorizontalStackLayout>
                        <Label Text="Phonetic Spelling: " Padding="16,0,0,0" />
                        <Label Text="{Binding PhoneticSpelling}" LineBreakMode="WordWrap" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </DataTemplate>
        </BindableLayout.ItemTemplate>
    </StackLayout>
</StackLayout>
