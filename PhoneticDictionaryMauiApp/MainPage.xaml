<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhoneticDictionaryMauiApp.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" CornerRadius="0">
            <Label Text="Phonetic Dictionary" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <StackLayout>
            <Entry x:Name="UserInput" Completed="TryGetWord" ReturnType="Search" Placeholder="Search for a word" FontSize="24"/>
        </StackLayout>
        <ScrollView VerticalOptions="FillAndExpand">
            <StackLayout>
                <Label x:Name="WordDisplay" Text="" HorizontalTextAlignment="Start" FontSize="28" Padding="10,16,0,16" FontAttributes="Bold" />
                <StackLayout x:Name="NoResultsFoundDisplay" IsVisible="False">
                    <Label Text="No results found." FontSize="20" Padding="16,0,0,0"/>
                </StackLayout>
                <StackLayout x:Name="MainWordDisplay" IsVisible="False">
                    <Grid ColumnDefinitions="150,*"  RowDefinitions="*,*">
                        <Label Grid.Column="0" Grid.Row="0" Text="Pronunciation: " FontSize="18" Padding="10,0,0,5" />
                        <Label Grid.Column="1" Grid.Row="0" x:Name="Pronunciation" Text="" HorizontalTextAlignment="Start" FontSize="18" />
                        <Label Grid.Column="0" Grid.Row="1" Text="Phonetics:" FontSize="18" Padding="10,0,0,5" />
                        <Label Grid.Column="1" Grid.Row="1" x:Name="PhoneticSpelling" Text="" HorizontalTextAlignment="Start" FontSize="18" />
                    </Grid>
                </StackLayout>
                <StackLayout>
                    <StackLayout x:Name="ExamplesParent"></StackLayout>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </StackLayout>
</ContentPage>
